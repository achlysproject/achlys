    {gc_interval, 45000},
    {sync_dets_on_update , false} ,
    {sync_dets_interval , 3000} ,
    {initial_formation_delay, 10000},
    {formation_check_interval, 10000},
    {initial_task_lookup_delay, 10000},
    {task_lookup_interval, 10000},

    {workers,  #{
            clustering => true,
            cleaning => true,
            sensing => false
        }
